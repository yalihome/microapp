/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.P-indexProductsEmpty{
  text-align: center;
}

.P-indexProducts{
  display: flex;
  flex-flow: wrap;
  padding: 20rpx;
  width: calc(vw - 40rpx);
}

.P-indexProducts .M-item{
  /* 100%是相对于父元素 */
  /* 为什么内部卡片的边框会被盖住了一部分？难以理解  */
   width: calc(50vw - 34rpx);
   margin: 0 20rpx 20rpx 0;
   border: 1rpx solid #e1e1e1;
}
.P-indexProducts .M-item:nth-child(2n){
  margin-right: 0;
}
view{
