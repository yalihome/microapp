/* components/cards/product/product.wxss */
.M-product{
    height: 328rpx;
}
.M-productPic{
    overflow: hidden;
}
.M-productPic,.M-productPic image{
    width: 100%;
    height: 200rpx;
}

.M-productDesc{
    /* 2行缩略 */
    line-height: 44rpx;
    height: 88rpx;
    font-size: 28rpx;
    word-break: break-all;
}
.M-productDetail{
    display: flex;
}
.M-productDetail view{
    flex: 1;
    font-size: 24rpx;
    line-height: 40rpx;
    height: 40rpx;
    color: gray;
}
.M-productDetail [data-type="out"]{
    text-align: right;
}